<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fasetto"
      xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" x:Class="Fasetto.LoginPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">


    <Border  Background="BlueViolet"
             Padding="15 50 15 15"
                Width="400"
             Margin="50 50 50 0"
             >

        <StackPanel>
            <TextBlock Text="Sign In" Padding="0 50"
                       Style="{StaticResource SignUp}" 
                       />
            <!--Email-->
            <TextBox Tag="Email" />
            <!--Password-->
            <PasswordBox Tag="Password" />
            <!--SignIn Button-->
            <Button  Content="Login" HorizontalAlignment="Center" />



        </StackPanel>

    </Border>

</Page>
